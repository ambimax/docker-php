schemaVersion: "2.0.0"

globalEnvVars:

metadataTest:
    env:
{% block test_metadata_env_defaults %}
        # Default ENV variables
        - key: PHP_INI_DIR
          value: '/usr/local/etc/php/'
        - key: PHP_FPM_PM
          value: 'static'
        - key: PHP_FPM_MAX_CHILDREN
          value: '20'
        - key: PHP_FPM_MAX_REQUESTS
          value: '1000'
{% endblock %}

{% block test_metadata_env %}
        # PHP default values
        - key: PHP_ALLOW_URL_FOPEN
          value: '1'
        - key: PHP_FILE_UPLOADS
          value: '1'
        - key: PHP_MAX_INPUT_VARS
          value: '1000'
        - key: PHP_MAX_EXECUTION_TIME
          value: '0'
        - key: PHP_MAX_FILE_UPLOADS
          value: '20'
        - key: PHP_MAX_INPUT_TIME
          value: '-1'
        - key: PHP_MEMORY_LIMIT
          value: '128M'
        - key: PHP_POST_MAX_SIZE
          value: '8M'
        - key: PHP_UPLOAD_MAX_FILESIZE
          value: '2M'
        - key: PHP_SESSION_AUTO_START
          value: '0'
        - key: PHP_OPCACHE_ENABLE
          value: '1'
{% endblock %}

    labels:
        - key: "maintainer"
          value: "Ambimax GmbH"

    exposedPorts: [ "9000" ]
    workdir: "/var/www/"

commandTests:
    - name: "check php version"
      command: "php"
      args: [ "--version" ]
      expectedOutput:
          - PHP
          - {{ php.version }}.
          - cli
          - OPcache

    - name: "check php-fpm version"
      command: "php-fpm"
      args: [ "-v" ]
      expectedOutput:
          - PHP
          - {{ php.version }}.
          - fpm-fcgi
          - OPcache

    - name: "check php extensions"
      command: "php"
      args: [ "-m" ]
      expectedOutput:
            - '[PHP Modules]'
            - apcu
            - Core
            - ctype
            - curl
            - date
            - dom
            - fileinfo
            - filter
            - ftp
            - hash
            - iconv
            - json
            - libxml
            - mbstring
            - mysqlnd
            - openssl
            - pcre
            - PDO
            - pdo_sqlite
            - Phar
            - posix
            - readline
            - Reflection
            - session
            - SimpleXML
            - sodium
            - SPL
            - sqlite3
            - standard
            - tokenizer
            - xml
            - xmlreader
            - xmlwriter
            - Zend OPcache
            - zlib
            - '[Zend Modules]'
            - Zend OPcache

    - name: "check php sodium version"
      command: php
      args:
          - -r
          - "echo (SODIUM_LIBRARY_MAJOR_VERSION >= 10) ? 'true' : 'false';"
      expectedOutput:
          - true

    - name: "check php-fpm extensions"
      command: "php-fpm"
      args: [ "-m" ]
      expectedOutput:
            - '[PHP Modules]'
            - apcu
            - cgi-fcgi
            - Core
            - ctype
            - curl
            - date
            - dom
            - fileinfo
            - filter
            - ftp
